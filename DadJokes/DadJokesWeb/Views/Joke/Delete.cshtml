@model Joke

@{
    ViewData["Title"] = "Deleting a joke";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete the joke ? :(</h2>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Number</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description">Punchline</label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Author">Author</label>
            <input asp-for="Author" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Joke" asp-action="Index" class="btn btn-secondary text-dark" style="width:150px">Back to the list</a>
    </div>
</form>

